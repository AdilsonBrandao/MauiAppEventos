<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.ResumoEventoPage"
             Title="Resumo do Evento">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="Confirmação do Evento"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#512BD4"/>

            <Frame BorderColor="#512BD4" 
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">
                    <Label x:Name="lblResumo" 
                           FontSize="16"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Confirmar" 
                    Clicked="BtnConfirmar_Clicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>